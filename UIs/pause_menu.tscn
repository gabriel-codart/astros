[sub_resource type="GDScript" id="GDScript_bp05a"]
script/source = "extends CanvasLayer

signal fade_out

@onready var anim: AnimationPlayer = $AnimationPlayer
var scene_path: StringName = \"res://UIs/main_menu.tscn\"

func _ready() -> void:
	SongPlayer.lower_volume()

func set_scene_path(path_value: StringName) -> void:
	anim.play(\"close\")
	scene_path = path_value

func _on_continue_button_pressed():
	SFXPlayer.click()
	set_scene_path(\"continue\")

func _on_restart_button_pressed():
	SFXPlayer.click()
	BackgroundInstantiate.reset_background()
	set_scene_path(\"restart\")

func _on_menu_button_pressed():
	SFXPlayer.click()
	set_scene_path(\"res://UIs/main_menu.tscn\")

func _on_animation_player_animation_finished(anim_name: StringName) -> void:
	if anim_name == \"close\":
		get_tree().paused = false
		SongPlayer.restore_volume()
		if scene_path == \"continue\":
			queue_free()
		elif scene_path == \"restart\":
			fade_out.emit()
			await get_tree().create_timer(1.0).timeout
			get_tree().reload_current_scene()
		else:
			fade_out.emit()
			await get_tree().create_timer(1.0).timeout
			get_tree().change_scene_to_file(scene_path)
		
"

