script/source = "extends CanvasLayer

@onready var anim: AnimationPlayer = $AnimationPlayer
var scene_path: StringName = \"res://Sections/game.tscn\"

func _ready() -> void:
	SongPlayer.play(SongPlayer.main_theme)

func set_scene_path(path_value: StringName) -> void:
	anim.play(\"close\")
	scene_path = path_value

func _on_play_button_pressed():
	SFXPlayer.click()
	set_scene_path(\"res://Sections/game.tscn\")

func _on_credits_button_pressed():
	SFXPlayer.click()
	set_scene_path(\"res://UIs/credits.tscn\")

func _on_animation_player_animation_finished(anim_name: StringName) -> void:
	if anim_name == \"close\":
		get_tree().change_scene_to_file(scene_path)
"

